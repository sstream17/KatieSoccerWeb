<div class="piece" style="@style" @onclick="AddForce"/>

@code
{
    [Parameter]
    public PieceModel Model { get; set; }

    string style => $"top: {Model.Position.Y}px; left: {Model.Position.X}px; background: {Model.Color};";

    void AddForce()
    {
        Model.AddForce(new Vector2(10, 5));
    }
}